<!-- SEARCH LARGE SCREEN -->
<div class="container-fluid bg-white padded-light hidden-xs hidden-sm hidden-md">
  <div class="row">
    <div class="col-xs-3">
      <div class="well">
        <form action="#">
          <input type="text">
          <input type="text">
          <input type="text">
        </form>
      </div>
      <%#= render "search" %>
    </div>
    <div class="col-xs-9">
      <div class="well">
        <%= @profiles.each do |profile| %>
          <div class="col-xs-12 col-sm-4">
            <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://kitt.lewagon.com/placeholder/cities/shanghai');">
              <div class="card-category">Famille</div>
              <div class="card-description">
                <h2><%= profile.first_name %></h2>
                <p><%= profile.job %></p>
              </div>
              <img class="card-user" src="https://kitt.lewagon.com/placeholder/users/tgenaitay">
              <%= link_to "", profile_path(profile), class: 'card-link' %>
            </div>
          </div>
        <% end %>
      </div>
      <%#= render "results" %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-9 col-xs-offset-3">
      <div class="text-center with-button">
        <%#= will_paginate @profiles, renderer: BootstrapPagination::Rails %>
      </div>
      <%# if @profiles.next_page %>
<!--       <div class="btn-load-more btn btn-treehouse-red"><%#= t "button.more" %></div>
 -->      <%# end %>
    </div>
  </div>
</div>
<!-- SEARCH SMALL SCREEN -->
