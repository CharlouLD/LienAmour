<% if user_signed_in? %>
<!-- ARTICLES -->
<div class="message">
  <% @posts.each do |post| %>
  <img class="avatar-large" src="https://kitt.lewagon.com/placeholder/users/gabriel-dehan">
  <div class="message-name">
    <h3>Charles-Eric</h3>
    <p><%= post.created_at.strftime('%b %d, %Y') %></p>
  </div>
  <div class="message-body">
    <p><strong><%= post.title %></strong></p>
    <p>
      <%= raw(post.body).truncate(358) %>
    </p>
  </div>
  <div class="message-status">
    <p class="status pending"></p>
    <p class="price"><i class="fa fa-eye" aria-hidden="true"></i></p>
  </div>
  <% end %>
</div>

