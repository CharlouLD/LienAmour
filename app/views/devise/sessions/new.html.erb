<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <div class="well">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs padded-light">
            <%= f.input :email, required: false, autofocus: true, placeholder: "Email" %>
            <%= f.input :password, required: false, placeholder: "Password" %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions text-center">
            <ul class="list-unstyled">
              <li>
                <%= button_tag(type: 'submit', class: "btn btn-block btn-treehouse-red") do %>
                  <i class="fa fa-sign-in" aria-hidden="true"></i>&nbsp
                    Se connecter
                  <% end %>
              </li>
              <li><hr></li>
              <li>
                <%= render "devise/shared/links" %>
              </li>
            </ul>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
